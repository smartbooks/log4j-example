<?xml version="1.0" encoding="UTF-8"?>
<Configuration>

    <Properties>
        <Property name="LOG_FILE_NAME">C:/test/log4j-all.log</Property>
    </Properties>

    <!--日志输出器-->
    <Appenders>
        <!--控制台输出-->
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="%d %-5p [%t] %C{2} (%F:%L) %m%n"/>
        </Console>

    </Appenders>

    <!--日志记录器-->
    <Loggers>

        <Root level="trace">
            <AppenderRef ref="STDOUT"/>
        </Root>
    </Loggers>

</Configuration>